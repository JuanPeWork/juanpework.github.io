								color white
								padding 0
								margin 5px 15px 0px
							i
								color #7D7D7D
						&:hover
							background-color rgba(0,90,255,.8)
							opacity 1
						p
							margin 10px 0px
							color white

				#image1
					background url(../Images/javascript.png)
					background-size 100% 100%
					background-repeat no-repeat
				#image2
					background url(../Images/design.png)
					background-size 100% 100%
					background-repeat no-repeat
				#image3
					background url(../Images/php.png)
					background-size 100% 100%
					background-repeat no-repeat
				#image4
					background url(../Images/android.png)
					background-size 100% 100%
					background-repeat no-repeat
				#image5
					background url(../Images/vstudio.png)
					background-size 100% 100%
					background-repeat no-repeat
				#image6
					background url(../Images/erp.png)
					background-size 100% 100%
					background-repeat no-repeat				
		#line
			width 100%
			height 75px
			background-color #232323
		#down
			article
				text-align center
				a
					color black
					text-decoration none
					.circle
