@font-face
	font-family roboto
	src url("../fonts/RobotoCondensed-Regular.ttf")
grayScale(n)
		-webkit-filter: grayscale(n)
		-moz-filter: grayscale(n)
		-o-filter: grayscale(n)
		filter: grayscale(n)
Transition(n)
		-webkit-transition: n
		-moz-transition: n
		-o-transition: n
		transition: n		
@media screen and (max-width:645px)
	html,body
		font-family roboto
		height 100%
		width 100%
	header
		background url(../Images/header.png)
		background-size cover
		background-repeat no-repeat
		background-attachment scroll
		background-position center center
		padding-top 1px 
		height 100%
		text-align center
		width 100%
		#photo
			background url(../Images/photo.png)
			background-size 100%
			background-repeat no-repeat
			height 150px
			margin 22px auto
			width 150px
			border-radius 100%
			border 4px solid white
			
			&:hover
				border 4px solid #FFAD04
			
		h1,h2
			color white
		nav
			text-align left
			background-color #575757
			width 100%
			height 67px
			position absolute
			vertical-align bottom
			bottom -1px
			padding-top 5px
			h2
				display inline-block
				width 85%
				padding 0
				margin 3.5% 0px 5px 15px
				
			#menu
				border-radius 100%
				position absolute
				display inline-block
				background #00A9FF url(../Images/menu.png)
				background-size 100%
				background-repeat no-repeat
				height 40px
				width 40px
				right 3%
				top 24%
			#logo
				display none
			ul
				display none
				list-style none
				margin 0
				padding 0
				width 100%
				position absolute
				top 100%
				li
					background-color #D7D7D7
					width 100%
					text-align center
					padding 10px 0
					a
						color black
						text-decoration none
						
					&:hover
						background-color #818181
	main
		width 100%
		background rgba(155, 155, 155, 0.67)
		padding 30px 0px
		#sobremi
			border 7px solid #00A9FF
			padding 5px
			width 90%
			margin 100px auto
			background-color #262721 //url(../Images/imagen.png)
			//background-repeat no-repeat
			//background-size 32% 54%
			//background-position 15px 10px
			text-align justify
			
			h3,p
				width 97%
			h3
				margin 10px 5px 5px 5px
				color #00A9FF
				font-size 23px
