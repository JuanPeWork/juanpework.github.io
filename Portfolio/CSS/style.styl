						height 270px
						margin auto
						Transition 1s linear
						grayScale(100%)
						&:hover
							grayScale(0%)
					#image7
						background url(../Images/aboutme.png)
						background-size 100% 100%
						background-repeat no-repeat
					
					#image8
						background url(../Images/curriculum.png)
						background-size 100% 100%
						background-repeat no-repeat
					
					#image9
						background url(../Images/contacto.png)
						background-size 100% 100%
						background-repeat no-repeat
					
		
	footer
		background rgba(0,0,0, 0.85)
		width 100%
		height 100px
		text-align center
		
		p
			color white
			padding-top 20px
			margin 5px
			
		#iconos
			margin auto
			text-align center
			i
				color white
				margin 0px 5px
				opacity 0.2
			#twitter:hover
				opacity 1
				color #04A6DB
			#facebook:hover
				opacity 1
				color #02309B
			#github:hover
				opacity 1
				color #9F00FF
		
	form
		background-color #393939
		width 70%
		margin 20px auto
		padding 10px
		
		input,label,textarea
